<GameData>
	<!-- Change Operation Ivy to share tech prereq with Manhattan Project - still requires Manhattan first -->
    <Projects>
        <Update>
            <Where ProjectType="PROJECT_OPERATION_IVY" />
            <Set PrereqTech="TECH_NUCLEAR_FISSION" />
        </Update>
    </Projects>
    <!-- Increase blast radius and range of all WMDs -->
    <WMDs>
        <Update>
            <Where WeaponType="WMD_NUCLEAR_DEVICE" />
            <Set>
                <BlastRadius>3</BlastRadius>
                <ICBMStrikeRange>200</ICBMStrikeRange>
            </Set>
        </Update>
        <Update>
            <Where WeaponType="WMD_THERMONUCLEAR_DEVICE" />
            <Set>
                <BlastRadius>6</BlastRadius>
                <ICBMStrikeRange>200</ICBMStrikeRange>
            </Set>
        </Update>
    </WMDs>
    <!-- Satellites tech reveals entire map for easier WMDing, like in Civ V -->
    <Modifiers>
        <Row>
			<ModifierId>TECH_EXPLORE_ENTIRE_MAP</ModifierId>
			<ModifierType>MODIFIER_PLAYER_EXPLORE_ENTIRE_MAP</ModifierType>
			<RunOnce>true</RunOnce>
			<Permanent>true</Permanent>
		</Row>
    </Modifiers>
    <TechnologyModifiers>
        <Row>
            <TechnologyType>TECH_SATELLITES</TechnologyType>
            <ModifierId>TECH_EXPLORE_ENTIRE_MAP</ModifierId>
        </Row>
    </TechnologyModifiers>
</GameData>